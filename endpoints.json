Endpoints: {
{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },

  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },

  "GET /api/users": {
    "description": "Serves an array of objects containing username, name and avatar_url",
    "exampleResponse": {
      "body": {
        "users": [
          {
            "username": "butter_bridge",
            "name": "jonny",
            "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
          }
        ]
      }
    }
  },

  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },

  "GET /api/articles/:article_id": {
    "description": "serves an article object by article id",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_Id": 1,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "comment_count": 6
      }
    }
  },

  "GET /api/articles/:article_id/comments": {
    "description": "Serves an array of comments for given article_id requested with the most recent first",
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 4,
          "topic": "mitch",
          "author": "rogersop",
          "body": "We all love Mitch and his wonderful, unique typing style. However, the volume of his typing has ALLEGEDLY burst another students eardrums, and they are now suing for damages",
          "created_at": "2020-05-06T01:14:00.000Z",
          "votes": 0,
          "article_id": 3
        }
      ]
    }
  },

  "POST /api/articles/:article_id/comments": {
    "description": "adds comment to comment database and serves the added comment",
    "exampleResponse": {
      "comment": {
        "comment_id": 4,
        "topic": "mitch",
        "author": "rogersop",
        "body": "We all love Mitch and his wonderful, unique typing style. However, the volume of his typing has ALLEGEDLY burst another students eardrums, and they are now suing for damages",
        "created_at": "2020-05-06T01:14:00.000Z",
        "votes": 0,
        "article_id": 3
      }
    }
  },

  "PATCH /api/articles/:article_id": {
    "description": "Updates article with new vote by article ID",
    "updatesVotes": { "inc_votes": 75 },
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Living in the shadow of a great man",
        "topic": "mitch",
        "author": "butter_bridge",
        "body": "I find this existence challenging",
        "created_at": "2020-07-09T20:11:00.000Z",
        "votes": 175,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    }
  },

  "DELETE /api/comments/:comment_id": {
    "description": "Deletes the given comment by `comment_id`. Responds with status 204 and no content.",
    "queries": []
  }
}
}
